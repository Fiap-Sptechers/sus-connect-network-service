{
    "info": {
        "_postman_id": "sus-connect-api-test",
        "name": "Sus Connect - Network Service",
        "description": "API para governança da rede de saúde, autenticação e gestão de plantões.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login Admin",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"jwt_token\", jsonData.token);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"cpfCnpj\": \"admin\",\n    \"password\": \"admin\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Criar Usuário (Gestor)",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Manager One\",\n    \"cpfCnpj\": \"98765432100\",\n    \"password\": \"password123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/users",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "users"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Listar Usuários (Capture User ID)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "// Find user with cpf 98765432100",
                                    "var user = jsonData.find(u => u.cpfCnpj === \"98765432100\");",
                                    "if (user) {",
                                    "    pm.environment.set(\"user_id\", user.id);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/users",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "users"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Health Units",
            "item": [
                {
                    "name": "Cadastrar Unidade",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"unit_id\", jsonData.id);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"UBS Santa Cecília\",\n    \"cnpj\": \"12345678000199\",\n    \"address\": {\n        \"street\": \"Rua Major Sertório\",\n        \"number\": \"200\",\n        \"neighborhood\": \"Vila Buarque\",\n        \"city\": \"São Paulo\",\n        \"state\": \"SP\",\n        \"zipCode\": \"01222001\",\n        \"latitude\": -23.5432,\n        \"longitude\": -46.6543\n    }\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/units",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "units"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Listar Unidades",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/units?page=0&size=10",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "units"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "0"
                                },
                                {
                                    "key": "size",
                                    "value": "10"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Adicionar Membro à Unidade",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"userId\": \"{{user_id}}\",\n    \"roleName\": \"MANAGER\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/units/{{unit_id}}/users",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "units",
                                "{{unit_id}}",
                                "users"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Doctors & Specialties",
            "item": [
                {
                    "name": "Listar Especialidades",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.length > 0) {",
                                    "    pm.environment.set(\"specialty_id\", jsonData[0].id);",
                                    "}",
                                    "var clinica = jsonData.find(s => s.name === 'CLINICA_GERAL');",
                                    "if(clinica) pm.environment.set(\"clinica_id\", clinica.id);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/specialties",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "specialties"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Criar Médico",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Dr. João Silva\",\n    \"crm\": \"123456-SP\",\n    \"specialtyIds\": [\"{{specialty_id}}\"]\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/doctors",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "doctors"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Shifts",
            "item": [
                {
                    "name": "Definir Escala Médica",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"unitId\": \"{{unit_id}}\",\n    \"specialty\": \"CLINICA_GERAL\",\n    \"doctorCrms\": [\"123456-SP\"]\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/shifts/schedule",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "shifts",
                                "schedule"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Atualizar Ocupação",
                    "request": {
                        "method": "PUT",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"unitId\": \"{{unit_id}}\",\n    \"specialty\": \"CLINICA_GERAL\",\n    \"waitingPatients\": 5\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/shifts",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "shifts"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Ver Status Unit",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/units/{{unit_id}}/status",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "units",
                                "{{unit_id}}",
                                "status"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "auth": {
        "type": "bearer",
