{
    "info": {
        "_postman_id": "sus-connect-api-test",
        "name": "Sus Connect - Network Service (GCP)",
        "description": "API para governança da rede de saúde, autenticação e gestão de plantões.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"jwt_token\", jsonData.token);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"cpfCnpj\": \"admin\",\n    \"password\": \"admin\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Health Units",
            "item": [
                {
                    "name": "Listar Unidades",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/units?page=0&size=10",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "units"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "0"
                                },
                                {
                                    "key": "size",
                                    "value": "10"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Unidades Próximas (Nearby)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/units/nearby?latitude=-23.55&longitude=-46.63&radius=5",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "units",
                                "nearby"
                            ],
                            "query": [
                                {
                                    "key": "latitude",
                                    "value": "-23.55"
                                },
                                {
                                    "key": "longitude",
                                    "value": "-46.63"
                                },
                                {
                                    "key": "radius",
                                    "value": "5"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Ver Status Unidade",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/units/{{unit_id}}/status",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "units",
                                "{{unit_id}}",
                                "status"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Actuator (Monitoring)",
            "item": [
                {
                    "name": "Health Check",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/actuator/health",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "actuator",
                                "health"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{jwt_token}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "base_url",
            "value": "https://sus-connect-network-service-909154055149.us-central1.run.app",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "unit_id",
            "value": "",
            "type": "string"
        }
    ]
}